<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bitc.project.dao.MemberDAO"> 

    <resultMap id="memberResultMap" type="com.bitc.project.vo.MemberVO"> 
        <!-- 각 컬럼과 매핑 -->
    </resultMap>
    
    <select id="getMemberById" resultMap="memberResultMap">
        SELECT * FROM MEMBER WHERE ID = #{id}
    </select>

    <insert id="insertMember">
        INSERT INTO MEMBER (ID, NNAME, PASS, EMAIL, NAME, STOPU)
        VALUES (#{id}, #{nname}, #{pass}, #{email}, #{name}, #{stopu})
    </insert>
</mapper>
